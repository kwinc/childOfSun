<Window x:Class="V4._0.crosswrd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:V4._0"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Электронно-учебное пособие по дисциплине 'Информационная Безопасность'" ResizeMode="NoResize" Height="680" Width="1082" Icon="/Res/icon.ico">
    <Grid Background="#90bcbd">

        <GroupBox Header="Управление" Foreground="#FFF" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0" Height="592" HorizontalAlignment="Left" Width="368">
            <Grid>
                <Label Content="Выбор кроссворда для редактирования:" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="16" Margin="10,10,0,0"/>
                <ComboBox x:Name="cb1" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" Width="284" SelectionChanged="cb1_SelectionChanged"/>

                <Button Click="Button_Click_1"    Content="Добавить новый"  HorizontalAlignment="Center" Margin="0,78,0,0"    VerticalAlignment="Top"     Background="#fc9880" Foreground="#FFF" FontFamily="Comic Sans MS" FontSize="24" Width="284"/>
                <Button Click="Button_Click_2"  Content="Удалить текущий" HorizontalAlignment="Center" Margin="0,120,0,0"   VerticalAlignment="Top"     Background="#fc9880" Foreground="#FFF" FontFamily="Comic Sans MS" FontSize="24" Width="284"/>
                <Button Click="Button_Click"  Content="На главную"      HorizontalAlignment="Center" Margin="0,161,0,0"   VerticalAlignment="Top"     Background="#fc9880" Foreground="#FFF" FontFamily="Comic Sans MS" FontSize="24" Width="284"/>
                <Label Content="Вопросы к кроссворду:" HorizontalAlignment="Left" Margin="10,203,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
                <RichTextBox x:Name="tb1" Margin="36,239,39,110"/>
                <Button Background="#fc9880" Foreground="#FFF" FontFamily="Comic Sans MS" FontSize="24" Click="Button_Click_3"  Content="Сохранить" HorizontalAlignment="Left" Margin="36,459,0,0" VerticalAlignment="Top"  Width="281"/>

            </Grid>
        </GroupBox>

